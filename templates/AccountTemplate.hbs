<form class="form-horizontal" role="form">
	<h3 class="account-header">O mnie</h3>
		<div class="form-group hidden-xs">
			<div class="col-sm-8 col-sm-offset-2 text-center">
				<div class="drop"><p class="desc">Upuść tutaj avatar<span>(lub kliknij)</span></p></div>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="name">Imię i nazwisko:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="text" class="form-control" id="name" autofocus>
		    </div>
	  	</div>
	  	<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="sex">Płeć:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<select class="form-control same-styles" id="sex">
	      			<option selected disabled>Wybierz...</option>
	      			<option value="male">Mężczyzna</option>
	      			<option value="female">Kobieta</option>
	      		</select>
		    </div>
	  	</div>
	  	<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="birth-year">Rok urodzenia:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="text" class="form-control" id="birth-year">
		    </div>
	  	</div>
	  	<div class="form-group">
			<label class="control-label col-sm-4 col-sm-offset-1 col-xs-12" for="license-year">Rok uzyskania prawa jazdy:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="text" class="form-control" id="license-year">
		    </div>
	  	</div>
	  	<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="phone">Nr telefonu:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="text" class="form-control" id="phone">
		    </div>
	  	</div>

	  	<div class="form-group">
	  		<div class="col-sm-2 col-sm-offset-4 col-xs-12">
  				<button type="button" class="btn btn-success pull-right save-about-btn">Zapisz</button>
  			</div>
	  	</div>

		<h3 class="account-header">Zmień dane logowania</h3>
		<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="email">Adres e-mail:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="text" class="form-control" id="email" value="rodzyn2007@gmail.com">
		    </div>
	  	</div>
	  	<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="old-pass">Stare hasło:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="password" class="form-control same-styles" id="old-pass">
		    </div>
	  	</div>
	  	<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="new-pass">Nowe hasło:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="password" class="form-control same-styles" id="new-pass">
		    </div>
	  	</div>
	  	<div class="form-group">
			<label class="control-label col-sm-3 col-sm-offset-2 col-xs-12" for="new-pass-confirm">Potwierdź nowe hasło:</label>
		    <div class="col-sm-4 col-xs-12">
	      		<input type="password" class="form-control same-styles" id="new-pass-confirm">
		    </div>
	  	</div>
	  	<div class="form-group">
	  		<div class="col-sm-2 col-sm-offset-4 col-xs-12">
  				<button type="button" class="btn btn-success pull-right save-login-btn">Zapisz</button>
  			</div>
  			<div class="col-sm-2 col-xs-12">
  				<button type="button" class="btn btn-danger pull-left delete-open-modal">Usuń konto</button>
  			</div>
  		</div>

</form>